{
  "extends": "../../packages/typescript-config/node.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}